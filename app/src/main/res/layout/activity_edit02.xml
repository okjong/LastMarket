<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".activity.Edit02_Activity">

    <com.google.android.material.appbar.MaterialToolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/purple_500"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:textSize="23sp"
            android:layout_gravity="center"
            android:fontFamily="@font/cookierunbold"
            android:text="상품 광고 등록"/>
    </com.google.android.material.appbar.MaterialToolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">
        <Button
            android:layout_marginTop="16dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cookierunregular"
            android:text="광고 이미지 선택"
            android:layout_gravity="left"
            android:onClick="clickSelectImage"/>
        <ImageView
            android:padding="25dp"
            android:id="@+id/p_iv02"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@drawable/image_back"
            android:background="@drawable/login_bg"/>
        <Button
            android:id="@+id/clickComplete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cookierunregular"
            android:text="게시하기" />

    </LinearLayout>


</LinearLayout>